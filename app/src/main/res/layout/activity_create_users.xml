<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    tools:context=".CreateUsers">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_margin="20dp"
        android:elevation="12dp"
        android:id="@+id/view2"
        app:cardCornerRadius="200dp"
        android:layout_centerHorizontal="true">
        <ImageView
            android:layout_height="150dp"
            android:layout_width="match_parent"

            android:id="@+id/imageView1"
            android:src="@drawable/smallicon"
            android:scaleType="centerCrop"/>
    </androidx.cardview.widget.CardView>
    <EditText
        android:id="@+id/rname"
        android:hint="Name"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:id="@+id/rollid"
        android:hint="Roll no./ id"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/radiogroup"

        >

        <RadioButton
            android:id="@+id/Student"
            android:text="Student"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RadioButton>
        <RadioButton
            android:text="Faculty"
            android:id="@+id/Faculty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            ></RadioButton>
    </RadioGroup>

    <EditText
        android:id="@+id/remail"
        android:hint="Email"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <EditText
        android:hint="Password"
        android:id="@+id/rpassward"
        android:layout_width="match_parent"
        android:layout_height="50dp"></EditText>
    <Button
        android:layout_marginTop="20dp"
        android:text="Register"
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="50dp"></Button>
    <Button

        android:layout_marginTop="20dp"
        android:text="Logout Admin"
        android:id="@+id/adLogout"
        android:layout_width="wrap_content"
        android:layout_height="50dp"></Button>


</LinearLayout>