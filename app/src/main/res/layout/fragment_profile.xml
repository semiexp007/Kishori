<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="385dp"
        android:background="@drawable/b1"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="20dp"
            android:elevation="12dp"
            android:id="@+id/view2"
            app:cardCornerRadius="200dp"
            android:layout_centerHorizontal="true">
            <ImageView
                android:layout_height="150dp"
                android:layout_width="match_parent"

                android:id="@+id/profilepic"
                android:src="@drawable/femapro"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/view2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
android:textColor="@color/purple_700"

            android:text="Kishori"
            android:textSize="18dp"
            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>
        <TextView
            android:id="@+id/roll"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/name"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"

android:textColor="@color/purple_700"
            android:text="CSJMA19001390007"
            android:textAlignment="center"
            android:textStyle="bold">

        </TextView>
        <LinearLayout
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_marginLeft="5dp"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:textColor="@color/purple_700"
                    android:layout_gravity="center"
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="20"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center">

                </TextView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Total Issues"
                    android:textColor="@color/purple_700"
                    ></TextView>
            </LinearLayout>
            <LinearLayout
                android:layout_width="100dp"

                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:textColor="@color/purple_700"
                    android:layout_gravity="center"
                    android:id="@+id/solved"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="20"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center">

                </TextView>
                <TextView
                    android:textColor="@color/purple_700"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="Issues Solved"
                    ></TextView>
            </LinearLayout>
            <LinearLayout

                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <TextView
                    android:textColor="@color/purple_700"
                    android:layout_gravity="center"
                    android:id="@+id/Unsolved"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="20"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:gravity="center">

                </TextView>




                <TextView
                    android:textColor="@color/purple_700"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:text="Unsolved Issue"
                    ></TextView>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/edit"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="Edit IMG"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"

            >

        </Button>
        <Button
            android:id="@+id/logout"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:text="LOGOUT"
            android:textSize="15dp"
            android:textStyle="bold"
            android:textColor="@color/white"
            >

        </Button>

    </LinearLayout>
        </LinearLayout>

<LinearLayout
    android:layout_marginTop="385dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
 <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
       app:cardBackgroundColor="#00E91E63"
        android:background="@drawable/backgrounchat"
        android:layout_height="wrap_content">
        <LinearLayout

            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/bottom"
            android:orientation="horizontal">

            <Button

                android:layout_width="0dp"
                android:text="Solved"
                android:textStyle="bold"
                android:textSize="17dp"

                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/solveditem"

                style="?android:attr/buttonBarButtonStyle"/>

            <Button

                android:text="UnSolved"
                android:textStyle="bold"
                android:textSize="17dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:enabled="true"
                android:id="@+id/unsolveditem"

                style="?android:attr/buttonBarButtonStyle"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrounchat"
        android:id="@+id/recsolveditem"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/backgrounchat"
        android:visibility="gone"
        android:id="@+id/recunsolveditem"/>

</LinearLayout>



</RelativeLayout>